<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.github.dcheong.yelptest.MainPage"
    tools:showIn="@layout/activity_main_page">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Project BlueJay"
        android:id="@+id/appTitle"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.14"
        android:textStyle="bold"
        android:textSize="45dp"
        android:layout_marginTop="183dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/searchBtn"
        android:background="@mipmap/ic_search_black_48dp"
        android:layout_weight="0.21"
        android:layout_below="@+id/appTitle"
        android:layout_toLeftOf="@+id/historyBtn"
        android:layout_toStartOf="@+id/historyBtn"
        android:layout_marginRight="56dp"
        android:layout_marginEnd="56dp"
        android:layout_marginTop="99dp"/>

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:id="@+id/historyBtn"
        android:background="@mipmap/ic_history_black_48dp"
        android:layout_alignTop="@+id/searchBtn"
        android:layout_alignRight="@+id/appTitle"
        android:layout_alignEnd="@+id/appTitle"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp"/>
</RelativeLayout>
